page{
  height: 100vh;
}
.card_img{
  width: 300rpx;
  height: 200rpx;
  border: 1px solid #fff;
  box-shadow: 1px 1px 4px #a5a5a5;
  border-radius: 20rpx;
  margin-bottom: 60rpx;
}
.voucherCard{
  position: relative;
  height: 100%;
  z-index: 2;
}
.mt_16{
  margin-top: 160rpx;
}
.title{
  width: 450rpx;
  text-align: center;
}
.f_40{
  font-size: 38rpx;
}
.money{
  color:#01A760;
}
.s_foot{
  width: 50%;
  margin-top: 100rpx;
  font-size: 32rpx;
}
.footer{
  position: absolute;
  bottom: 3%;
}
.sm_img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}